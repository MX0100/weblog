# ======================================
# Frontend Environment Configuration
# ======================================
# Copy this file to .env.local for local development
# Production values should be set in deployment environment

# ======================================
# API Configuration
# ======================================
# Backend API base URL
# Local: http://localhost:8080
# Production: https://your-cloudfront-domain.cloudfront.net
VITE_API_BASE_URL=http://localhost:8080

# ======================================
# WebSocket Configuration
# ======================================
# WebSocket URL for real-time notifications
# Local: ws://localhost:8080/ws
# Production: wss://your-cloudfront-domain.cloudfront.net/ws
VITE_WS_URL=ws://localhost:8080/ws

# ======================================
# Application Configuration
# ======================================
# Application title
VITE_APP_TITLE=WeBlog

# Application version
VITE_APP_VERSION=1.0.0

# Environment name for debugging
VITE_ENV_NAME=local

# ======================================
# Feature Flags
# ======================================
# Enable/disable features for different environments
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false

# ======================================
# AWS Configuration (Production Only)
# ======================================
# CloudFront domain for static assets
VITE_CLOUDFRONT_DOMAIN=

# S3 bucket for file uploads
VITE_S3_BUCKET=

# AWS region
VITE_AWS_REGION=us-east-1

# ======================================
# Third-party Services
# ======================================
# Google Analytics ID (optional)
VITE_GA_ID=

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN= 